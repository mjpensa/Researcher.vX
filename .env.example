# StrataFlow v2.0 Environment Configuration

# Application
STRATAFLOW_ENVIRONMENT=development
STRATAFLOW_DEBUG=true

# Database Configuration
DB_NEO4J_URI=bolt://localhost:7687
DB_NEO4J_USER=neo4j
DB_NEO4J_PASSWORD=your_password_here
DB_REDIS_URL=redis://localhost:6379
DB_QDRANT_HOST=localhost
DB_QDRANT_PORT=6333

# LLM Configuration
LLM_PROVIDER=gemini
LLM_GEMINI_API_KEY=your_api_key_here
LLM_GEMINI_MODEL=gemini-2.0-flash-thinking-exp
LLM_DEFAULT_TEMPERATURE=0.0
LLM_DEFAULT_MAX_TOKENS=2000

# Agent Configuration
AGENT_MAX_PARALLEL_AGENTS=5
AGENT_AGENT_TIMEOUT_SECONDS=300
AGENT_CONSERVATIVE_INFERENCE_THRESHOLD=0.95
AGENT_SPECULATIVE_INFERENCE_THRESHOLD=0.75
AGENT_MAX_PROOF_DEPTH=5

# Observability
OBS_LOG_LEVEL=INFO
OBS_LOG_FORMAT=json
OBS_ENABLE_PROMETHEUS=true
OBS_PROMETHEUS_PORT=9090
OBS_ENABLE_TRACING=true

# Performance
PERF_ENABLE_EMBEDDING_CACHE=true
PERF_ENABLE_INFERENCE_CACHE=true
PERF_CACHE_TTL_SECONDS=3600
PERF_BATCH_SIZE_PROPOSITIONS=32
PERF_BATCH_SIZE_EMBEDDINGS=64
